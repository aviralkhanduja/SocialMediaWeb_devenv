<link rel="stylesheet" href="/css/signup.css"> 
<h2>UPDATE INFO</h2>
<form action="/user/home/updateuser" id="take-input" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col">
            <input type="text" name="Name" placeholder="YOUR NAME" required value="<%=user.Name%>">
        </div>
        <div class="col">
            <input type="email" name="Email" placeholder="EMAIL" required value="<%=user.Email%>">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="text" name="Phone" placeholder="PHONE NUMBER" value="<%=user.Phone%>">
        </div>
        <div class="col">
            <input type="text" name="Address" placeholder="ADDRESS" value="<%=user.Address%>">
        </div>
    </div>
    <div class="row"> 
        <div class="col">   
            <input type="text" name="Zip_Code" placeholder="ZIP CODE" value="<%=user.Zip_Code%>">
        </div>
        <div>
            <input type="file" name="avatar" placeholder="Profile Picture">
        </div>
    </div>
    
    <button type="submit"><i class="fas fa-user"></i>UPDATE USER</button>
</form>